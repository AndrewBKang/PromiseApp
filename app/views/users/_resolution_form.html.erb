<div class="resolution_form">
	<%= form_for(@resolution, remote: true) do |f| %>
		<%= f.label :title %><br>
		<%= f.text_field :title %><br>
		<%= f.label :body %><br>
		<%= f.text_area :body, size: '22x4' %><br>
		<%= f.hidden_field :user_id %>
		<%= hidden_field_tag 'resolution[user_id]', current_user.id %>
		<%= f.submit "create" %>
	<% end %>
</div>