<div class="sign-container">
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {class: 'bubble'}) do |f| %>
	  <div><%= f.label :email %><br />
	  <%= f.email_field :email, :autofocus => true %></div>

	  <div><%= f.label :password %><br />
	  <%= f.password_field :password %></div>

	  <% if devise_mapping.rememberable? -%>
	    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
	  <% end -%>

	  <%= f.submit "Sign in" %>
	<% end %>
	<div class="sign-links">
		<%= render "devise/shared/links" %><br><br>
	<a href="#" class="guest">Guest User</a>
	<a href="#" class="guest guest2">Guest User2</a>
	</div>
</div>

<script>
	$('.guest').on("click", function(event){
		$('#user_email').val("example@example.com");
		$('#user_password').val("password");
	});

	$('.guest2').on("click", function(event){
		$('#user_email').val("example2@example.com");
		$('#user_password').val("password");
	});
</script>
