<div class="sign-container">
	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {class: 'bubble'}) do |f| %>
	  <%= devise_error_messages! %>
		<div class="inputs">
			<div class="username"><%= f.label :username %><br>
			<%= f.text_field :username, :autofocus => true  %></div>

		  <div class="email"><%= f.label :email %><br>
		  <%= f.email_field :email%></div>
		
			<div class="profile-picture"><%= f.label :profile_photo %><br>
			<%= f.file_field :profile_photo %></div>

		  <div class="password"><%= f.label :password %><br>
		  <%= f.password_field :password %></div>

		  <div class="password-confirmation"><%= f.label :password_confirmation %><br>
		  <%= f.password_field :password_confirmation %></div>

		  <div class="sign-button"><%= f.submit "Sign up" %></div>
		</div>
	<% end %>

	<div class="sign-links"><%= render "devise/shared/links" %></div>
</div>