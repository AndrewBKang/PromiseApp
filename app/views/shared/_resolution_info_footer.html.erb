<div class="mini-footer clearfix">
	<ul class="left-list">
		<% if resolution.user.id == current_user.id%>
			<li>
				<a class="update-button" href="#">update</a>
				<div class="update-form">
					<%= form_for(Update.new, remote: true) do |f| %>
						<%= f.label :content %><br>
						<%= f.text_area :content, size: '22x4' %><br>
						<%= f.label :update_photo %>
						<%= f.file_field :update_photo %>
						<%= f.hidden_field :updateable_id %>
						<%= hidden_field_tag 'update[updateable_id]', resolution.id %>
						<%= f.hidden_field :updateable_type %>
						<%= hidden_field_tag 'update[updateable_type]', resolution.class.name %>
						<%= f.submit "Create Update" %>
					<% end %>
				</div>
			</li>
		<% else %>
			<li><a class="like-button" href="#">like</a></li>
		<% end %>
	</ul>
	<ul class="links clearfix">
		<li class="show-comment">
			<a href="#"> 
				<span class="comments-count"><%= resolution.comments.count %></span> comments 
			</a>
		</li>
		<li><a href="#">10 updates</a></li>
		<li><a href="#"> -5 likes </a></li>
	</ul>
	<div class="comment">
	<%= render :partial => 'shared/comment_form', locals: {resolution: resolution} %>
	</div>
</div>